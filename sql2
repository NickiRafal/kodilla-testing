SELECT I.*, L.NAME AS LIST_NAME
FROM ISSUES AS I
JOIN ISSUESLISTS AS L ON I.ISSUESLIST_ID = L.ID;

SELECT I.*, U.FIRSTNAME, U.LASTNAME
FROM ISSUES AS I
LEFT JOIN USERS AS U ON I.USER_ID_ASSIGNEDTO = U.ID;

SELECT U.FIRSTNAME, U.LASTNAME, COUNT(I.ID) AS TASK_COUNT
FROM USERS AS U
LEFT JOIN ISSUES AS I ON U.ID = I.USER_ID_ASSIGNEDTO
GROUP BY U.ID, U.FIRSTNAME, U.LASTNAME;